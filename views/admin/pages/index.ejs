<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pages</title>
  <link href="/material-dashboard/css/material-dashboard.css" rel="stylesheet">
</head>
<body>
  <%- include('../partials/nav') %>
  <div class="container mt-5">
    <h1>Pages</h1>
    <a href="/admin/pages/add" class="btn btn-primary">Ajouter une nouvelle page</a>
    <table class="table mt-3">
      <thead>
        <tr>
          <th>Title</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% pages.forEach(page => { %>
          <tr>
            <td><%= page.title %></td>
            <td><%= page.status %></td>
            <td>
              <a href="/admin/pages/edit/<%= page.id %>" class="btn btn-warning">Modifier</a>
              <form action="/admin/pages/delete/<%= page.id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger">Supprimer</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <%- include('../partials/footer') %>
  <script src="/material-dashboard/js/material-dashboard.js"></script>
</body>
</html>
