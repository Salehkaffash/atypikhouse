<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="py-5">
        <div class="card-header card-header-primary">
          <h4 class="txt-green h2">Gestion des Thèmes</h4>
          <p class="txt-green">Gestion des Thèmes de votre site</p>
        </div>
            <div class="card-body">
                <a href="/admin/themes/new" class="btn txt-white btn-green">Ajouter un nouveau thème</a>
              <div class="table-responsive">
                <table class="table">
                  <thead class="text-primary">
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Sous-titre</th>
                    <th>Image</th>
                    <th>Actions</th>
                  </thead>
                  <tbody>
                    <% themes.forEach(theme => { %>
                      <tr>
                        <td><%= theme.id %></td>
                        <td><%= theme.name %></td>
                        <td><%= theme.subtitle %></td>
                        <td>
                          <% if (theme.image) { %>
                            <img src="/<%= theme.image %>" alt="<%= theme.name %>" class="img-thumbnail" style="max-width: 100px;">
                          <% } else { %>
                            Pas d'image
                          <% } %>
                        </td>
                        <td>
                          <a href="/admin/themes/edit/<%= theme.id %>" class="btn btn-warning">Modifier</a>
                          <form action="/admin/themes/delete/<%= theme.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                          </form>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  