  <!-- Icons Fontawesome -->
  <script src="https://kit.fontawesome.com/9923ee27af.js" crossorigin="anonymous"></script>

</head>
<body>
  <%- include('partials/nav') %>

    <!-- File d'Ariane -->
    <div class="fil-ariane">
      <div class="container-full px-5 p-3">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb  m-0">
            <li class="breadcrumb-item"><a href="/">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Mes réservations</li>
          </ol>
        </nav>
      </div>
    </div>

<div class="bg-light">
  <div class="container">
    <h1 class="txt-blue bold text-center py-5">Mes Réservations</h1>
    <div class="row">
      <h2 class="h4 txt-green mb-4">Réservations en cours</h2>
      <% ongoingBookings.forEach(booking => { %>
      <div class="col-md-12 flex-wrap align-items-center bg-white p-3 bs10 br20 gap-3 d-flex">
        <div class="col-md-1 col-12">
          <% if (booking.housing.Photos && booking.housing.Photos.length > 0) { %>
            <img src="/<%= booking.housing.Photos[0].path %>" class=" br15 card-img-top" alt="<%= booking.housing.title %>">
          <% } else { %>
            <img src="/path/to/default-image.jpg" class="br15 card-img-top" alt="Image non disponible">
          <% } %>
        </div>
        <div class="col-md-3 col-12">
          <h3 class="txt-green h4 bold"><%= booking.housing.title %></h3>
        </div>
        <div class="col-md-2 col-6">
          <p class="card-text">Début : <%= booking.startDate.toDateString('fr-FR') %></p>
        </div>
        <div class="col-md-2 col-6">
          <p class="card-text">Fin : <%= booking.endDate.toDateString('fr-FR') %></p>
        </div>
        <div class="col-md col-12">
          <p class="card-text">Statut : <%= booking.status %></p>
        </div>
        <div class="col-md-2 col-12">
          <form action="/bookings/cancel/<%= booking.id %>" method="POST">
            <button type="submit" class="btn btn-danger">Annuler la réservation</button>
          </form>
        </div>
      </div>
      <% }) %>


      <h2 class="h4 txt-green mt-5 mb-4">Réservations passées</h2>
      <% pastBookings.forEach(booking => { %>
      <div class="col-md-12 flex-wrap align-items-center bg-white p-3 bs10 br20 gap-3 d-flex">
        <div class="col-md-1">
          <% if (booking.housing.Photos && booking.housing.Photos.length > 0) { %>
            <img src="/<%= booking.housing.Photos[0].path %>" class=" br15 card-img-top" alt="<%= booking.housing.title %>">
          <% } else { %>
            <img src="/path/to/default-image.jpg" class="br15 card-img-top" alt="Image non disponible">
          <% } %>
        </div>
        <div class="col-md-3 col-12">
          <h3 class="txt-green h4 bold"><%= booking.housing.title %></h3>
        </div>
        <div class="col-md-2 col-12">
          <p class="card-text">Début : <%= booking.startDate.toDateString('fr-FR') %></p>
        </div>
        <div class="col-md-2 col-12">
          <p class="card-text">Fin : <%= booking.endDate.toDateString('fr-FR') %></p>
        </div>
        <div class="col-md col-12">
          <p class="card-text">Statut : <%= booking.status %></p>
        </div>
        <div class="col-md-2 col-12">
          
        </div>
      </div>
      <% }) %>



      <h2 class="h4 txt-green mt-5 mb-4">Réservations annulées</h2>
      <% cancelledBookings.forEach(booking => { %>
      <div class="col-md-12 flex-wrap align-items-center bg-white p-3 bs10 br20 gap-3 d-flex">
        <div class="col-md-1">
          <% if (booking.housing.Photos && booking.housing.Photos.length > 0) { %>
            <img src="/<%= booking.housing.Photos[0].path %>" class=" br15 card-img-top" alt="<%= booking.housing.title %>">
          <% } else { %>
            <img src="/path/to/default-image.jpg" class="br15 card-img-top" alt="Image non disponible">
          <% } %>
        </div>
        <div class="col-md-3 col-12">
          <h3 class="txt-green h4 bold"><%= booking.housing.title %></h3>
        </div>
        <div class="col-md-2 col-12">
          <p class="card-text">Début : <%= booking.startDate.toDateString('fr-FR') %></p>
        </div>
        <div class="col-md-2 col-12">
          <p class="card-text">Fin : <%= booking.endDate.toDateString('fr-FR') %></p>
        </div>
        <div class="col-md col-12">
          <p class="card-text">Statut : <%= booking.status %></p>
        </div>
        <div class="col-md-2 col-12">
          
        </div>
      </div>
      <% }) %>

    </div>
  </div>
</div>

  <%- include('partials/footer') %>
</body>
</html>
