<!DOCTYPE html>
<html lang="en">
<head>

  <!-- Meta -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name='robots' content='index, follow' />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#000000"/>
  <link rel="shortcut icon" type="image/png" href="/images/favicon.png"/>
  <link rel="canonical" href="https://dsp-dev-g5-sk-as-lm.fr/" />

  <!-- Page Info -->
  <title>Nos Hébergements insolite à <%= destination.name %> (<%= destination.location %>)</title>
  <meta name="description" content="Découvrez les hébergements insolite à <%= destination.name %>, <%= destination.location %>, proposé par AtypikHouse." />

  <!-- SEO -->
  <meta property="og:type" content="website" />
  <meta property="og:title" content="Nos Hébergements insolite à <%= destination.name %> (<%= destination.location %>)" />
  <meta property="og:description" content="Découvrez les hébergements insolite à <%= destination.name %>, <%= destination.location %>, proposé par AtypikHouse." />
  <meta property="og:url" content="https://dsp-dev-g5-sk-as-lm.fr/" />
  <meta property="og:image" content="https://dsp-dev-g5-sk-as-lm.fr/" />
  <meta property="og:image:width" content="150" />
  <meta property="og:image:height" content="180" />
  <meta property="og:site_name" content="AtypikHouse" />

  <!-- CSS Files -->
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/bootstrap.min.css">

  <!-- js Files -->
  <script src="/js/bootstrap.js"></script>
  <script src="/js/bootstrap.bundle.js"></script>

  <!-- Saira Font Google -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Saira+Semi+Condensed:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

  <!-- Icons Fontawesome -->
  <script src="https://kit.fontawesome.com/9923ee27af.js" crossorigin="anonymous"></script>
  
    <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-HVQHXD756X"></script>
  <script>   window.dataLayer = window.dataLayer || [];   function gtag(){dataLayer.push(arguments);}   gtag('js', new Date());   gtag('config', 'G-HVQHXD756X'); </script>


</head>
<body>
  <%- include('partials/nav') %>

  <!-- File d'Ariane -->
  <div class="fil-ariane">
    <div class="container-full px-5 p-3">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item"><a href="/">Accueil</a></li>
          <li class="breadcrumb-item"><a href="/destinations">Déstinations</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= destination.name %></li>
        </ol>
      </nav>
    </div>
  </div>

  <!-- Section Single Theme -->
  <div class="single-theme-section-1" style="background-image: url(/<%= destination.image %>);"></div>
  <div class="single-theme-section">
    <div class="container h-100">
      <div class="row h-100 align-items-center">
        <div class="col-md-6">
          <h1 class="txt-white fw6"><%= destination.name %>, <%= destination.location %></h1>
          <p class="h5 fw3 lh15 txt-white"><%= destination.description %></p>
        </div>
      </div>
    </div>
  </div>



  <div class="bg-green">
    <div class="container py-5">
        <form id="filter-form" class="form-inline col-md-6 d-flex align-items-center gap-3 mb-5">
          <select class="form-control mr-2 " id="sortBy" name="sortBy">
            <option value="recent">Les plus récentes</option>
            <option value="popular">Les plus populaires</option>
            <option value="expensive">Les plus chères</option>
            <option value="cheap">Les moins chères</option>
          </select>
          <select class="form-control mr-2" id="themeFilter" name="theme">
            <option value="">Tous les thèmes</option>
            <% themes.forEach(theme => { %>
              <option value="<%= theme.id %>"><%= theme.name %></option>
            <% }); %>
          </select>
          <button type="submit" class="btn btn-primary">Filtrer</button>
        </form>

      <div class="row">
        <% destination.Housings.forEach(housing => { %>
          <div class="col-md-3">
            <div class="card-host">
              <a href="/hebergements/<%= housing.id %>" class="">

                <% if (housing.Photos && housing.Photos.length > 0) { %>
                  <img src="/<%= housing.Photos[0].path %>" class="card-img-top" alt="<%= housing.title %>">
                <% } else { %>
                  <img src="/path/to/default-image.jpg" class="card-img-top" alt="Default Image">
                <% } %>

                <div class="body-host">
                  <h4><%= housing.title %></h4>
                  <p>Prix : <%= housing.price %> € <span><%= housing.capacity %> personnes max</span></p>
                </div>
              </a>
            </div>
          </div>
  
        <% }) %>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
